<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/in"
    tools:context=".Problema2">

    <TextView
        android:id="@+id/Nper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="44dp"
        android:text="Nombre de la persona"
        android:textColor="#00D4B4"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/nom"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/Nper2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Nper2"
        android:layout_width="122dp"
        android:layout_height="63dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="24dp"
        android:text="Datos"
        android:textColor="#00D4C2"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/nom2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toTopOf="@+id/recu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/grab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="148dp"
        android:onClick="grabar"
        android:text="GRABAR"
        android:textColor="#00D4BB"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recu"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom2"
        app:layout_constraintVertical_bias="0.987" />

    <Button
        android:id="@+id/recu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="148dp"
        android:onClick="recuperar"
        android:text="RECUPERAR"
        android:textColor="#00D4C2"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>