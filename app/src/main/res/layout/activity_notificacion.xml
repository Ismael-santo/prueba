<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/panta"
    tools:context=".Notificacion">

    <TextView
        android:id="@+id/noti1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        android:text="Â¿Cual es el numero que observo?"
        android:textColor="#00BCD4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etnoti"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etnoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/btnoti"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="376dp"
        android:onClick="controlar"
        android:text="CONTROLAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>