<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sol"
    tools:context=".PasarParametrosActivity">

    <TextView
        android:id="@+id/para"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="28dp"
        android:text="Ingrese un sitio web:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editweb"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="344dp"
        android:onClick="ver"
        android:text="VER"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editweb"
        android:layout_width="354dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/ver"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>